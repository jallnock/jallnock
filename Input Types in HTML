    <h2>Form with Different Input Types</h2>
    <form action="/submit" method="post">
        <!-- Text Input -->
        <label for="text">Text Input:</label>
        <input type="text" id="text" name="text_input"><br><br>

        <!-- Password Input -->
        <label for="password">Password:</label>
        <input type="password" id="password" name="password"><br><br>

        <!-- Email Input -->
        <label for="email">Email:</label>
        <input type="email" id="email" name="email"><br><br>

        <!-- Number Input -->
        <label for="number">Number:</label>
        <input type="number" id="number" name="number" min="1" max="100"><br><br>

        <!-- Date Input -->
        <label for="date">Date:</label>
        <input type="date" id="date" name="date"><br><br>

        <!-- Color Picker -->
        <label for="color">Pick a Color:</label>
        <input type="color" id="color" name="color"><br><br>

        <!-- Range Slider -->
        <label for="range">Range Slider:</label>
        <input type="range" id="range" name="range" min="0" max="100"><br><br>

        <!-- Checkbox -->
        <label for="checkbox">I agree:</label>
        <input type="checkbox" id="checkbox" name="checkbox"><br><br>

        <!-- Radio Buttons -->
        <label for="male">Male</label>
        <input type="radio" id="male" name="gender" value="male">
        <label for="female">Female</label>
        <input type="radio" id="female" name="gender" value="female"><br><br>

        <!-- File Upload -->
        <label for="file">Upload a File:</label>
        <input type="file" id="file" name="file"><br><br>

        <!-- Submit Button -->
        <input type="submit" value="Submit">
    </form>
</body>

